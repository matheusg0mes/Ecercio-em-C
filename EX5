//Peça ao usuário para preencher matriz 2x4 de números inteiros. Exiba a matriz
//original digitada pelo usuário e a matriz transposta desta matriz.
#include <stdio.h>

int main(){

int a[2][4];
int b[4][2];

for(int i = 0; i < 2; i ++){
    for(int j = 0; j < 4;j++){
        printf("Digite os valores da sua matriz: ");
        scanf("%d",&a[i][j]);
    }
}
 printf("\n Matriz Original \n");
 for(int i =0; i< 2; i++){
     for(int j=0;j <4;j++){
         printf("%d", a[i][j]);
     }
     printf("\n");
 }
 for(int i =0; i< 2; i++){
     for(int j=0;j <4;j++){
         b[j][i]= a[i][j];
         
     }
 }
printf(" \n MATRIZ TRANSPOSTA\n");
for(int j = 0;j <4;j++){
    for(int i = 0; i<2;i++){
        printf("%d",b[j][i]);
    }
    printf("\n");
}
}
