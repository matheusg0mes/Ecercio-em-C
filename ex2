//Obtenha a média dos valores da diagonal principal da matriz acima.
#include <stdio.h>

int main(){

int matriz[4][4];
int n=4;
float soma=0;
float media=0;
for(int i = 0;i <4; i ++){
    for(int j = 0; j< 4;j++){
        printf("Digite  o valor da matriz ");
        scanf("%d",&matriz[i][j]);
        
    }
}
printf("Diagonal primaria \n");
for(int i = 0;i <4; i ++){
    for(int j = 0; j< 4;j++){
       
       printf("%d ",matriz[i][j]);
    }
        printf("\n");
    
}
for(int i = 0;i <4; i ++){
    for(int j = 0; j< 4;j++){
        if(i==j){
       printf("%d \n",matriz[i][j]);
       soma = soma + matriz[i][j];
        }
    }
}
media= soma /4;
printf("O valor da soma dos numeros da matriz principal é %0.2f, e a media é %0.2f",soma,media);
    return 0;
}
