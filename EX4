//Obtenha a soma dos elementos do triângulo inferior à diagonal secundária.
#include <stdio.h>
int main(){

int matriz[4][4];
int n=4;
float soma=0;
float media=0;
for(int i = 0;i <4; i ++){
    for(int j = 0; j< 4;j++){
        printf("Digite  o valor da matriz ");
        scanf("%d",&matriz[i][j]);
        
    }
}
printf("Diagonal primaria \n");
for(int i = 0;i <4; i ++){
    for(int j = 0; j< 4;j++){
       
       printf("%d ",matriz[i][j]);
    }
        printf("\n");
    
}
for(int i = 0;i <4; i ++){
    for(int j = 0; j< 4;j++){
        if(i+j==n - 1){
       printf("%d ",matriz[i][j]);
      
        }
        
    }
    printf("\n");
}
for(int i = 0;i <4; i ++){
    for(int j = 0; j< 4;j++){
        if (j >= n - i){
printf("%d",matriz[i][j]);
      soma= soma + matriz[i][i];
        }
      
    }
     
    printf("\n");
}
    printf("A soma dos valores do triangula inferior de diagonal segundaria é %f",soma);

}
